@page
@model enjaz.Pages.Users.DeleteTaskModel
@{
    ViewData["Title"] = "DeleteTask";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Delete Service</h1>
<form method="post">
    <div class="backgroundwhite border pt-3 pl-3">
        <input type="hidden" asp-for="Task.Id" />
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Task.TaskForEmployee"> </label>
            </div>
            <div class="col-5">
                <input asp-for="Task.TaskForEmployee" class="form-control" disabled/>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Task.NumberOfDay"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Task.NumberOfDay" disabled />
            </div>
        </div>
     
   

        <div class="row form-group">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <btn data-toggle="modal" data-target="#Ask" class="btn btn-danger form-control">Delete</btn>
                    </div>
                    <div class="col-6">
                        <a asp-page="TaskPage" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="Ask" role="dialog" method="post">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p class="alert alert-danger">Are you sure?</p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success" value="Yes" />
                    </div>
                </div>

            </div>



        </div>
    </div>
</form>

